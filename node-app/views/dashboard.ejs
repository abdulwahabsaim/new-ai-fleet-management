<%- include('partials/header') %>

<div class="container-fluid">
    <h1 class="mt-4 mb-4">Dashboard</h1>

    <%- include('partials/flash_messages') %>

    <!-- Stats Cards -->
    <div class="row">
        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-start-primary shadow h-100 py-2">
                <div class="card-body">
                    <div class="row align-items-center">
                        <div class="col">
                            <div class="text-xs fw-bold text-primary text-uppercase mb-1">Total Vehicles</div>
                            <div class="h5 mb-0 fw-bold text-gray-800"><%= stats.totalVehicles %></div>
                        </div>
                        <div class="col-auto">
                            <i class="bi bi-truck fs-2 text-secondary"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-start-success shadow h-100 py-2">
                 <div class="card-body">
                    <div class="row align-items-center">
                        <div class="col">
                            <div class="text-xs fw-bold text-success text-uppercase mb-1">Active Vehicles</div>
                            <div class="h5 mb-0 fw-bold text-gray-800"><%= stats.activeVehicles %></div>
                        </div>
                        <div class="col-auto">
                            <i class="bi bi-check-circle-fill fs-2 text-secondary"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-start-warning shadow h-100 py-2">
                 <div class="card-body">
                    <div class="row align-items-center">
                        <div class="col">
                            <div class="text-xs fw-bold text-warning text-uppercase mb-1">In Maintenance</div>
                            <div class="h5 mb-0 fw-bold text-gray-800"><%= stats.maintenanceVehicles %></div>
                        </div>
                        <div class="col-auto">
                            <i class="bi bi-tools fs-2 text-secondary"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-start-info shadow h-100 py-2">
                 <div class="card-body">
                    <div class="row align-items-center">
                        <div class="col">
                            <div class="text-xs fw-bold text-info text-uppercase mb-1">Total Routes</div>
                            <div class="h5 mb-0 fw-bold text-gray-800"><%= stats.totalRoutes %></div>
                        </div>
                        <div class="col-auto">
                            <i class="bi bi-sign-merge-right fs-2 text-secondary"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Recent Vehicles Table -->
    <div class="card shadow-sm mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 fw-bold text-primary">Recently Added Vehicles</h6>
        </div>
        <div class="card-body">
            <% if (recentVehicles.length > 0) { %>
            <div class="table-responsive">
                <table class="table table-bordered mb-0" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>Make & Model</th>
                            <th>License Plate</th>
                            <th>Mileage</th>
                            <th>Status</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% recentVehicles.forEach(vehicle => { %>
                            <tr>
                                <td><a href="/vehicles/<%= vehicle._id %>" class="text-decoration-none"><%= vehicle.make %> <%= vehicle.model %></a></td>
                                <td><span class="font-monospace"><%= vehicle.licensePlate %></span></td>
                                <td><%= vehicle.mileage.toLocaleString() %> km</td>
                                <td><span class="badge bg-<%= vehicle.status === 'active' ? 'success' : 'warning' %>"><%= vehicle.status %></span></td>
                            </tr>
                        <% }); %>
                    </tbody>
                </table>
            </div>
            <% } else { %>
                <p class="text-center text-muted my-3">No vehicles have been added yet.</p>
            <% } %>
        </div>
    </div>
</div>

<%- include('partials/footer') %>