<%- include('partials/header') %>

<div class="container-fluid">
    <h1 class="mt-4 mb-4">Dashboard</h1>
    <%- include('partials/flash_messages') %>
    
    <!-- Stats Cards -->
    <div class="row">
        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-start-primary shadow h-100 py-2">
                <div class="card-body">
                    <div class="row align-items-center">
                        <div class="col">
                            <div class="text-xs fw-bold text-primary text-uppercase mb-1">Total Vehicles</div>
                            <div class="h5 mb-0 fw-bold text-gray-800"><%= stats.totalVehicles %></div>
                        </div>
                        <div class="col-auto">
                            <i class="bi bi-truck fs-2 text-secondary"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-start-success shadow h-100 py-2">
                 <div class="card-body">
                    <div class="row align-items-center">
                        <div class="col">
                            <div class="text-xs fw-bold text-success text-uppercase mb-1">Active Vehicles</div>
                            <div class="h5 mb-0 fw-bold text-gray-800"><%= stats.activeVehicles %></div>
                        </div>
                        <div class="col-auto">
                            <i class="bi bi-check-circle-fill fs-2 text-secondary"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-start-warning shadow h-100 py-2">
                 <div class="card-body">
                    <div class="row align-items-center">
                        <div class="col">
                            <div class="text-xs fw-bold text-warning text-uppercase mb-1">In Maintenance</div>
                            <div class="h5 mb-0 fw-bold text-gray-800"><%= stats.maintenanceVehicles %></div>
                        </div>
                        <div class="col-auto">
                            <i class="bi bi-tools fs-2 text-secondary"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-start-info shadow h-100 py-2">
                 <div class="card-body">
                    <div class="row align-items-center">
                        <div class="col">
                            <div class="text-xs fw-bold text-info text-uppercase mb-1">Total Routes</div>
                            <div class="h5 mb-0 fw-bold text-gray-800"><%= stats.totalRoutes %></div>
                        </div>
                        <div class="col-auto">
                            <i class="bi bi-sign-merge-right fs-2 text-secondary"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Main Content Row -->
    <div class="row">
        <!-- Maintenance Alerts Column -->
        <div class="col-lg-6 mb-4">
            <div class="card shadow-sm h-100">
                <div class="card-header py-3">
                    <h6 class="m-0 fw-bold text-danger"><i class="bi bi-exclamation-triangle-fill me-2"></i>AI Maintenance Alerts</h6>
                </div>
                <div class="card-body">
                    <% if (maintenanceAlerts.length > 0) { %>
                        <div class="list-group list-group-flush">
                            <% maintenanceAlerts.forEach(vehicle => { %>
                                <a href="/vehicles/<%= vehicle._id %>" class="list-group-item list-group-item-action d-flex justify-content-between align-items-center">
                                    <div>
                                        <div class="fw-bold"><%= vehicle.make %> <%= vehicle.model %></div>
                                        <small class="text-muted"><%= vehicle.licensePlate %></small>
                                    </div>
                                    <span class="badge bg-warning text-dark">Check Soon</span>
                                </a>
                            <% }); %>
                        </div>
                    <% } else { %>
                        <div class="text-center p-4">
                             <i class="bi bi-shield-check display-4 text-success"></i>
                            <p class="text-muted mt-2 mb-0">No maintenance alerts at this time. All vehicles are healthy!</p>
                        </div>
                    <% } %>
                </div>
            </div>
        </div>

        <!-- Recent Trips Column -->
        <div class="col-lg-6 mb-4">
            <div class="card shadow-sm h-100">
                <div class="card-header py-3">
                    <h6 class="m-0 fw-bold text-primary"><i class="bi bi-geo-alt-fill me-2"></i>Recent Trips</h6>
                </div>
                <div class="card-body">
                     <% if (recentTrips.length > 0) { %>
                        <div class="table-responsive">
                            <table class="table table-sm table-borderless mb-0">
                                <tbody>
                                    <% recentTrips.forEach(trip => { %>
                                        <tr>
                                            <td>
                                                <div class="fw-bold"><%= trip.title %></div>
                                                <small class="text-muted"><%= trip.driver ? trip.driver.fullName : 'N/A' %></small>
                                            </td>
                                            <td class="text-end">
                                                <span class="badge bg-<%= trip.status === 'Completed' ? 'success' : 'secondary' %>"><%= trip.status %></span>
                                            </td>
                                        </tr>
                                    <% }); %>
                                </tbody>
                            </table>
                        </div>
                     <% } else { %>
                        <p class="text-center text-muted my-3">No recent trips to display.</p>
                     <% } %>
                </div>
            </div>
        </div>
    </div>
</div>

<%- include('partials/footer') %>