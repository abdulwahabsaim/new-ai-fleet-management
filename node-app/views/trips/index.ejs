<%- include('../partials/header') %>

<div class="container-fluid">
    <div class="d-sm-flex align-items-center justify-content-between mb-4 mt-4">
        <h1 class="h3 mb-0 text-dark">Trip Management</h1>
        <a href="/trips/new" class="btn btn-primary shadow-sm">
            <i class="bi bi-plus-lg me-1"></i> Plan New Trip
        </a>
    </div>

    <%- include('../partials/flash_messages') %>

    <div class="card shadow-sm">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover align-middle">
                    <thead class="table-light">
                        <tr>
                            <th>Title / Route</th>
                            <th>Vehicle</th>
                            <th>Driver</th>
                            <th>Status</th>
                            <th>Fuel Efficiency</th>
                            <th class="text-end">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% if (trips.length > 0) { %>
                            <% trips.forEach(trip => { %>
                                <tr>
                                    <td>
                                        <div class="fw-bold"><%= trip.title %></div>
                                        <div class="small text-muted"><%= trip.routeName %></div>
                                    </td>
                                    <td><%= trip.vehicle ? trip.vehicle.licensePlate : 'N/A' %></td>
                                    <td><%= trip.driver ? trip.driver.fullName : 'N/A' %></td>
                                    <td>
                                        <span class="badge 
                                            <% if (trip.status === 'Completed') { %> bg-success
                                            <% } else if (trip.status === 'In Progress') { %> bg-info
                                            <% } else if (trip.status === 'Cancelled') { %> bg-danger
                                            <% } else { %> bg-secondary <% } %>">
                                            <%= trip.status %>
                                        </span>
                                    </td>
                                    <td>
                                        <% if (trip.status === 'Completed' && trip.fuelConsumed > 0) { %>
                                            <% const distanceKm = (trip.finalMileage - trip.vehicle.mileage) || (trip.totalDistance / 1000) %>
                                            <% const efficiency = (trip.fuelConsumed / distanceKm * 100).toFixed(2) %>
                                            <span class="fw-bold"><%= efficiency %> L/100km</span>
                                        <% } else { %>
                                            <span class="text-muted">N/A</span>
                                        <% } %>
                                    </td>
                                    <td class="text-end">
                                        <% if (trip.status === 'Scheduled') { %>
                                            <form action="/trips/<%= trip._id %>/status?_method=POST" method="POST" class="d-inline">
                                                <input type="hidden" name="status" value="In Progress">
                                                <button type="submit" class="btn btn-sm btn-success">Start Trip</button>
                                            </form>
                                        <% } else if (trip.status === 'In Progress') { %>
                                             <button type="button" class="btn btn-sm btn-primary" data-bs-toggle="modal" data-bs-target="#completeTripModal" data-trip-id="<%= trip._id %>" data-vehicle-mileage="<%= trip.vehicle.mileage %>">
                                                Complete Trip
                                            </button>
                                        <% } %>
                                    </td>
                                </tr>
                            <% }); %>
                        <% } else { %>
                            <tr>
                                <td colspan="6" class="text-center py-4">No trips scheduled. Plan one to get started!</td>
                            </tr>
                        <% } %>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<!-- Complete Trip Modal -->
<div class="modal fade" id="completeTripModal" tabindex="-1" aria-labelledby="completeTripModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="completeTripModalLabel">Complete Trip</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <form id="completeTripForm" action="" method="POST">
        <input type="hidden" name="_method" value="POST">
        <input type="hidden" name="status" value="Completed">
        <div class="modal-body">
            <p>Enter the final details for this trip to calculate fuel efficiency.</p>
            <div class="mb-3">
                <label for="finalMileage" class="form-label">Final Odometer Reading (km)</label>
                <input type="number" class="form-control" id="finalMileage" name="finalMileage" required>
            </div>
            <div class="mb-3">
                <label for="fuelConsumed" class="form-label">Fuel Consumed (Liters)</label>
                <input type="number" step="0.01" class="form-control" id="fuelConsumed" name="fuelConsumed" required>
            </div>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
          <button type="submit" class="btn btn-primary">Save and Complete</button>
        </div>
      </form>
    </div>
  </div>
</div>

<script>
    // JavaScript to pass trip ID to the modal
    const completeTripModal = document.getElementById('completeTripModal');
    completeTripModal.addEventListener('show.bs.modal', function (event) {
        const button = event.relatedTarget;
        const tripId = button.getAttribute('data-trip-id');
        const vehicleMileage = button.getAttribute('data-vehicle-mileage');
        
        const form = completeTripModal.querySelector('#completeTripForm');
        form.action = `/trips/${tripId}/status?_method=POST`;
        
        const mileageInput = completeTripModal.querySelector('#finalMileage');
        mileageInput.value = vehicleMileage;
        mileageInput.min = vehicleMileage;
    });
</script>

<%- include('../partials/footer') %>