<%- include('../partials/header') %>

<div class="container-fluid">
    <div class="d-sm-flex align-items-center justify-content-between mb-4 mt-4">
        <h1 class="h3 mb-0 text-dark">Driver Management</h1>
        <a href="/drivers/new" class="btn btn-primary shadow-sm">
            <i class="bi bi-person-plus-fill me-1"></i> Add New Driver
        </a>
    </div>

    <%- include('../partials/flash_messages') %>

    <div class="card shadow-sm">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover align-middle">
                    <thead class="table-light">
                        <tr>
                            <th>Name</th>
                            <th>License Number</th>
                            <th>Phone</th>
                            <th>Status</th>
                            <th class="text-end">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% if (drivers.length > 0) { %>
                            <% drivers.forEach(driver => { %>
                                <tr>
                                    <td class="fw-bold"><%= driver.fullName %></td>
                                    <td><span class="font-monospace"><%= driver.licenseNumber %></span></td>
                                    <td><%= driver.phone || 'N/A' %></td>
                                    <td>
                                        <span class="badge bg-<%= driver.status === 'active' ? 'success' : 'secondary' %> text-capitalize">
                                            <%= driver.status.replace('_', ' ') %>
                                        </span>
                                    </td>
                                    <td class="text-end">
                                        <a href="/drivers/<%= driver._id %>/edit" class="btn btn-sm btn-outline-primary me-1">
                                            <i class="bi bi-pencil"></i> Edit
                                        </a>
                                        <form action="/drivers/<%= driver._id %>?_method=DELETE" method="POST" class="d-inline" onsubmit="return confirm('Are you sure you want to delete this driver?');">
                                            <button type="submit" class="btn btn-sm btn-outline-danger">
                                                <i class="bi bi-trash"></i> Delete
                                            </button>
                                        </form>
                                    </td>
                                </tr>
                            <% }); %>
                        <% } else { %>
                            <tr>
                                <td colspan="5" class="text-center py-4">No drivers found. Add one to get started!</td>
                            </tr>
                        <% } %>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<%- include('../partials/footer') %>