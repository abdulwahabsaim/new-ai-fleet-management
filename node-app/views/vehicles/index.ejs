<%- include('../partials/header') %>

<div class="container-fluid">
    <div class="d-sm-flex align-items-center justify-content-between mb-4 mt-4">
        <h1 class="h3 mb-0 text-dark">Vehicle Fleet</h1>
        <a href="/vehicles/new" class="btn btn-primary shadow-sm">
            <i class="bi bi-plus-lg me-1"></i> Add New Vehicle
        </a>
    </div>

    <%- include('../partials/flash_messages') %>

    <div class="card shadow-sm">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover align-middle" width="100%" cellspacing="0">
                    <thead class="table-light">
                        <tr>
                            <th style="width: 2rem;"></th> <!-- For Alert Icon -->
                            <th>Make & Model</th>
                            <th>License Plate</th>
                            <th>Mileage</th>
                            <th>Status</th>
                            <th class="text-end">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% if (vehicles.length > 0) { %>
                            <% vehicles.forEach(vehicle => { %>
                                <tr>
                                    <td class="text-center">
                                        <% if (vehicle.healthScore && vehicle.healthScore < 75) { %>
                                            <i class="bi bi-exclamation-triangle-fill text-<%= vehicle.healthScore < 50 ? 'danger' : 'warning' %>" title="<%= vehicle.healthScoreMessage %> (Score: <%= vehicle.healthScore %>)"></i>
                                        <% } %>
                                    </td>
                                    <td>
                                        <a href="/vehicles/<%= vehicle._id %>" class="text-decoration-none fw-bold"><%= vehicle.make %> <%= vehicle.model %></a>
                                        <div class="small text-muted"><%= vehicle.year %></div>
                                    </td>
                                    <td><span class="font-monospace"><%= vehicle.licensePlate %></span></td>
                                    <td><%= vehicle.mileage.toLocaleString() %> km</td>
                                    <td>
                                        <% if (vehicle.status === 'active') { %>
                                            <span class="badge bg-success">Active</span>
                                        <% } else if (vehicle.status === 'in_maintenance') { %>
                                            <span class="badge bg-warning text-dark">Maintenance</span>
                                        <% } else { %>
                                            <span class="badge bg-secondary">Inactive</span>
                                        <% } %>
                                    </td>
                                    <td class="text-end">
                                        <a href="/vehicles/<%= vehicle._id %>" class="btn btn-sm btn-info">
                                            <i class="bi bi-eye"></i> View
                                        </a>
                                    </td>
                                </tr>
                            <% }); %>
                        <% } else { %>
                            <tr>
                                <td colspan="6" class="text-center py-4">No vehicles found. Add one to get started!</td>
                            </tr>
                        <% } %>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<%- include('../partials/footer') %>